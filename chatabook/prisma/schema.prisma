generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
id      Int   @default(autoincrement()) @id
name    String
surname String
email   String
events Event[]
}


model Event {
id          Int   @default(autoincrement()) @id
user        User  @relation(fields: [userId], references: [id]) 
userId      Int 
occassion   String
start       DateTime @db.Date
end         DateTime @db.Date
people      Int
whole       Boolean
appartments Int?
message     String? @db.LongText

@@index([userId])
}

